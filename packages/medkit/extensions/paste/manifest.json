{
  "manifest_version": 2,
  "name": "paste",
  "version": "0.0.0",
  "permissions": ["tabs", "https://medium.com/*", "clipboardRead",  "clipboardWrite"],
  "externally_connectable": {
    "matches": ["https://medium.com/*"]
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://medium.com/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ]
}
